{
    "manifest_version": 3,
    "name": "Quiz helper",
    "version": "1.0",
    "description": "Розширення для отримання відповіді на запитання з зображення на сторінці за допомогою Gemini.",
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "sidePanel",
      "notifications"
    ],
    "side_panel": {
    "default_path": "sidebar.html",
    "openPanelOnActionClick": true
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
      "64": "icons/icon64.png",
      "16": "icons/icon16.png"
    },
    "action": {
      "default_title": "Click to open panel"
    },
    "background": {
      "service_worker": "background.js"
    }
  }